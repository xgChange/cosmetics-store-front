{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "parser": "vue-eslint-parser",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["warn", 2],
    "quotes": [
      1,
      "single",
      {
        "allowTemplateLiterals": true /*允许模板字符串(es6)*/
      }
    ],
    "semi": ["error", "never"] /*分号*/
  }
}
